{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "process",
      "label": "Build active file with make",
      "command": "/usr/bin/make",
      "args": ["build", "SOURCE=${relativeFile}"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: /usr/bin/g++"
    }
  ]
}
